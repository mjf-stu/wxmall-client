/* pages/goods_detail/goods_detail.wxss */
page{
    padding-bottom: 50px;
}

.swiperContainer{
    width: 100%;
    height: 65vw;
}
.swiperItem{
    text-align: center;
}
.swiperItem image{
    width: 60%;
}

.goodsPrice,.goodsInfoTitle{
    color: var(--themeColor);
    padding-left: 30rpx;
    font-weight: bold;
    font-size: 32rpx;
}

.goodsInfo{
    display: flex;
    padding: 10rpx;
    color: #979797;
    border-bottom: 10rpx solid #ececec;
}
.goodsMsg{
    flex: 5;

    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.goodsCollect{
    flex: 1;
    border-left: 1px solid #cfcfcf;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.goodsDetailInfo{
}

.goodsInfoTitle{
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.bottomBar{
    width: 750rpx;
    height: 50px;
    font-size: 22rpx;
    background-color: #FFFFFF;
    
    display: flex;
    text-align: center;
    
    position: fixed;
    bottom: 0px;
    left: 0px;
}
.kefu,.share,.cart,.addCart,.buy{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
}
.kefu,.share{
    position: relative;
}
#sharebtn,#kefubtn{
    width: 100%;
    height: 100%;
    padding: 0;

    position: absolute;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    opacity: 0;
}
.addCart{
    flex: 1.5;
    background-color: #ffa401;
    color: white;
}
.buy{
    flex: 1.5;
    background-color: var(--themeColor);
    color: white;
}