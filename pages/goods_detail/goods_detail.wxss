/* pages/goods_detail/goods_detail.wxss */
.swiperContainer{
    width: 100%;
    height: 65vw;
}
.swiperItem{
    text-align: center;
}
.swiperItem image{
    width: 60%;
}

.goodsPrice,.goodsInfoTitle{
    color: var(--themeColor);
    padding-left: 30rpx;
    font-weight: bold;
    font-size: 32rpx;
}

.goodsInfo{
    display: flex;
    padding: 10rpx;
    color: #979797;
    border-bottom: 10rpx solid #ececec;
}
.goodsMsg{
    flex: 5;

    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.goodsCollect{
    flex: 1;
    border-left: 1px solid #cfcfcf;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.goodsDetailInfo{
}

.goodsInfoTitle{
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.bigPicsContainer{
    position: relative;
    width: 100vw;
    height: 100vh;
    background-color: #000000;
}

.bigPics{
    width: 100%;
    height: 750rpx;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(0,-50%);
}

.bigPicsItem{

}

.bigPicsItem image{
    width: 100%;
    height: 100%;
}