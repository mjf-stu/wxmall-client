/* pages/goods_list/goods_list.wxss */
.goodsList{
    
}
.goodsItem{
    display: flex;
    border-bottom: 1px solid #cacaca;
}
.goodsImg{
    flex: 1;
    padding: 20rpx;
    text-align: center;
}
.goodsImg image{
    width: calc(100% - 60rpx);
}
.goodsDesc{
    flex: 2;
    padding: 20rpx;

    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.goodsName{
    /* width: 440rpx; */
    /* text-overflow: ellipsis; */
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;

}
.goodsPrice{
    color: var(--themeColor);
    font-size: 36rpx;
}

.tips{
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 20rpx 40rpx;
    color: #FFFFFF;
    background-color: #000000d8;
    border-radius: 20rpx;
    transition: opacity 500ms;
}
.tipsShow{
    opacity: 1;
}
.tipsHidden{
    opacity: 0;
}